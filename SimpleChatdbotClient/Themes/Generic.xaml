<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SimpleChatdbotClient.Themes">

    <Style x:Key="FontAwesome" TargetType="TextBlock">
        <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Resources/Fonts/#FontAwesome" />
        <Setter Property="TextElement.FontSize" Value="30" />
        <Setter Property="TextElement.FontStyle" Value="Normal" />
    </Style>

    <Style x:Key="IconFont" TargetType="TextBlock">
        <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/Resources/Fonts/#iconfont" />
        <Setter Property="TextElement.FontSize" Value="30" />
        <Setter Property="TextElement.FontStyle" Value="Normal" />
    </Style>
</ResourceDictionary>